<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="#99CC00"
        android:background="#ff000000"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:text="Niveau actuel de la baterie"
        android:singleLine="true"
        android:textSize="16dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:max="100"
        android:progress="@android:integer/status_bar_notification_info_maxnum"
        android:padding="2dp"
        android:scrollbarSize="50dp"
        android:maxHeight="20dp"
        android:minHeight="20dp" />

    <TextView
        android:id="@+id/batterie"
        android:textColor="#ff000000"
        android:background="#FFE1E1E1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:textColor="#99CC00"
        android:background="#ff000000"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:text="Applications installÃ©es"
        android:textIsSelectable="false"
        android:textSize="16dp" />

    <ListView
        android:id="@+id/listapp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

</LinearLayout>