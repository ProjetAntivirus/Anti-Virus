<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="#99CC00"
        android:background="#ff000000"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:text="Niveau actuel de la baterie"
        android:singleLine="true"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/batterie"
        android:textColor="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="blabla"
        android:textSize="40dp"
        android:layout_gravity="center" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:max="100"
        android:progress="@android:integer/status_bar_notification_info_maxnum"
        android:padding="2dp"
        android:scrollbarSize="50dp"
        android:maxHeight="20dp"
        android:minHeight="20dp"
        android:layout_margin="2dp" />

    <TextView
        android:textColor="#99CC00"
        android:background="#ff000000"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:text="Utilisation de la batterie"
        android:textIsSelectable="false"
        android:textSize="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voir les statistiques"
        android:id="@+id/checkBattery" />

</LinearLayout>