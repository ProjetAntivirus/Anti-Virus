<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.antivirus" >

    // Permissions
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.BATTERY_STATS"/>
    <uses-permission android:name="android.permission.READ_USER_DICTIONARY"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>

    <application android:allowBackup="true" android:icon="@drawable/and_virus" android:label="@string/app_name" android:theme="@style/AppTheme" >

        // Autorisation pour les receivers
        <receiver android:name=".BroadcastReceiver.BroadcastReceiverBattery">
            <intent-filter> <action android:name="android.intent.action.ACTION_CHANGED"/></intent-filter>
        </receiver>
        <receiver class=".BroadcastReceiver.OnBootReceiver" android:name=".BroadcastReceiver.OnBootReceiver">
            <intent-filter> <action android:name="android.intent.action._BOOT_COMPLETED" /> </intent-filter>
        </receiver>
        <receiver class=".BroadcastReceiver.SMSReceiver" android:name=".BroadcastReceiver.SMSReceiver">
            <intent-filter android:priority="100"> <action android:name="android.provider.Telephony.SMS_RECEIVED" /> </intent-filter>
        </receiver>

        // Autorisation pour les services
        <service android:name=".Services.NotificationService" android:enabled="true" />
        <service android:name=".Services.GestionBatteryService" android:enabled="true" />

        // Autorisation pour le content provider
        <provider android:name=".contentProvider.MyProvider" android:authorities="com.antivirus.provider"
            android:exported="true"  android:multiprocess="true" > </provider>


        //Declaration des activit√©es
        <activity
            android:name="MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <!-- <data android:mimeType="vnd.android.cursor.item/vnd.content.provider.battery"/> -->
            </intent-filter>
        </activity>
        <activity android:name=".Option" android:label="@string/app_name" />
        <activity android:name=".EnConstruction" android:label="@string/app_name" />
        <activity android:name=".MemoryController" android:label="@string/app_name" />
        <activity android:name=".BatteryController" android:label="@string/app_name" />
        <activity android:name=".SmsController" android:label="@string/app_name" />
        <activity android:name=".ContactRepertory" android:label="@string/app_name"/>

    </application>
</manifest>
