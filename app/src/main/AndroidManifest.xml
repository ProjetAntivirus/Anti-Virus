<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.antivirus"
    android:versionCode="1"
    android:versionName="1.0">

    // Permissions
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.BATTERY_STATS"/>
    <uses-permission android:name="android.permission.READ_USER_DICTIONARY"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application android:allowBackup="true" android:icon="@drawable/and_virus" android:label="Antivirus" android:theme="@style/AppTheme" >

        // Autorisations pour les receivers
        <receiver class=".BroadcastReceiver.SMSReceiver" android:name=".BroadcastReceiver.SMSReceiver">
            <intent-filter android:priority="100"> <action android:name="android.provider.Telephony.SMS_RECEIVED" /> </intent-filter></receiver>
        <receiver android:name=".BroadcastReceiver.BroadcastReceiverBattery">
            <intent-filter> <action android:name="android.intent.action.ACTION_CHANGED"/></intent-filter></receiver>
        <receiver android:enabled="true" android:exported="false" class=".BroadcastReceiver.OnBootReceiver" android:name=".BroadcastReceiver.OnBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action._BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        // Autorisation pour les services
        <service android:name=".Services.NotificationService" android:enabled="true" />
        <service android:name=".Services.GestionBatteryService" android:enabled="true" />

        // Autorisation pour le content provider
        <provider android:name=".contentProvider.MyProvider" android:authorities="com.antivirus.provider"
            android:exported="true"  android:multiprocess="true" > </provider>

        //Declaration des activitées
        <activity
            android:name="MainActivity"
            android:label="Antivirus" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.Option" android:label="Analyser les composants" />
        <activity android:name=".Activity.EnConstruction" android:label="En cours de développement" />
        <activity android:name=".Activity.MemoryController" android:label="Memoire" />
        <activity android:name=".Activity.BatteryController" android:label="Batterie" />
        <activity android:name=".Activity.SmsController" android:label="SMS" />
        <activity android:name=".Activity.ContactRepertory" android:label="Répertoire"/>
        <activity android:name=".Activity.SmsEnvoyes" android:label="Sms envoyés"/>
        <activity android:name=".Activity.SMS" android:label="Analyser les flux"/>
    </application>
</manifest>
